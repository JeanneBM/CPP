// Program oblicza pole koła.
// Wzór na pole koła to pi razy
// promień do kwadratu. Pi wynosi 3,14159.
#include <iostream>
#include <cmath>   // Potrzebne do zastosowania funkcji pow()
using namespace std;

int main()
{
   const double PI = 3.14159;
   double area, radius;

   cout << "Ten program oblicza pole koła.\n";
   cout << "Ile wynosi promień koła? ";
   cin >> radius;
   area = PI * pow(radius, 2.0);
   cout << "Pole wynosi " << area << "." << endl;
   return 0;
}
