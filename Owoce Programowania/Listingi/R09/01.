// Ten program demonstruje u¿ycie operatora & i funkcji sizeof()
// do wyœwietlenia adresu i wielkoœci zmiennej.
#include <iostream>
using namespace std;

int main()
{
  int x = 25;

  cout << "Adres zmiennej x: " << &x << endl;
  cout << "Wielkoœæ zmiennej x: " << sizeof(x) << " B\n";
  cout << "Wartoœæ zmiennej x: " << x << endl;
  return 0;
}

