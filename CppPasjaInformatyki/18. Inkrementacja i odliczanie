#include <iostream>
#include <windows.h>

using namespace std;

int main()
{

    for (int i=1; i<=10; i++)
    {
        cout << i << endl;
    }

    cout << " " << endl;

    for (int i=4; i>=-1; i--)
    {
        cout << i << endl;
    }

    cout << " " << endl;

    for (int i=15; i>=0;i--)
    {
        Sleep(1000);
        cout << i <<endl;
    }
    cout << "JEBUT" << endl;

        cout << " " << endl;

    for (int i=15; i>=0;i--)
    {
        Sleep(1000);
        system ("cls");
        cout << i <<endl;
    }
    cout << "JEBUT" << endl;
    return 0;
}
