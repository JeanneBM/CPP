// Ten program demonstruje pobieranie danych za pomocą obiektu
//cin i zapisywanie ich w obiekcie typu string.
#include <iostream>
#include <string>
using namespace std;

int main()
{
  string name;

  cout << "Jak masz na imię? ";
  cin >> name;
  cout << "Cześć, " << name << "!" << endl;
  return 0;
}
