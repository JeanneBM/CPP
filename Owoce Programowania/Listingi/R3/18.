// Ten program ilustruje problem, który może wystąpić, 
// jeśli cin zostanie użyty do odczytania tekstu do obiektu string.
#include <iostream>
#include <string>
using namespace std;

int main()
{
    string name;
    string city;

    cout << "Wprowadź, proszę, swoje imię i nazwisko: ";
    cin >> name;
    cout << "Wprowadź miasto, w którym mieszkasz: ";
    cin >> city;

    cout << "Witaj, " << name << "." << endl;
    cout << "Mieszkasz w " << city << "." << endl;
    return 0;
}
