// Ten program demonstruje liczby losowe.
#include <iostream>
#include <cstdlib>   // rand() i srand()
#include <ctime>     // Funkcja time()
using namespace std;

int main()
{
   // Pobranie czasu systemowego
   unsigned seed = time(0);

   // Wprowadzenie ziarna do generatora liczb losowych
   srand(seed);

   // Wy≈õwietlenie trzech liczb losowych
   cout << rand() << endl;
   cout << rand() << endl;
   cout << rand() << endl;
   return 0;
}
