// Ten program pokazuje, jak źle umieszczony średnik
// przedwcześnie kończy instrukcję if.
#include <iostream>
using namespace std;

int main()
{
   int x = 0, y = 10;

   cout << "x to " << x << ", a y to " << y << "." << endl;
   if (x > y);    // Błąd! Źle umieszczony średnik
      cout << "x jest większe niż y.\n"; // To wykona się zawsze.
   return 0;
}
