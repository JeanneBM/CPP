#include <iostream>
#include <windows.h>

using namespace std;

string imie;
int liczba;

int main()

{
    cout << "Podaj swoje imie: " << endl;
    cin >> imie;

    cout << "Podaj liczbe: " << endl;
    cin >> liczba;

    for (int i=1; i<=liczba; i++)
    {
        Sleep(1000);
        cout << i << ". " << imie <<endl;
    }
    system("pause");
    return 0;
}
