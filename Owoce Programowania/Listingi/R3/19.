// Ten program demonstruje użycie funkcji getline()
// do zapisania danych tekstowych do obiektu klasy string.
#include <iostream>
#include <string>
using namespace std;

int main()
{
    string name;
    string city;

    cout << "Wprowadź, proszę, swoje imię i nazwisko: ";
    getline(cin, name);
    cout << "Wprowadź miasto, w którym mieszkasz: ";
    getline(cin, city);

    cout << "Witaj, " << name << "." << endl;
    cout << "Mieszkasz w " << city << "." << endl;
    return 0;
}
